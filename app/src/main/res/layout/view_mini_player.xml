<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/miniPlayer"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="#FFFFFF"
    android:elevation="6dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/ivMiniCover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvMiniTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Трек"
            android:textStyle="bold"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvMiniSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Исполнитель"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnMiniPrev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Prev"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <ImageButton
        android:id="@+id/btnMiniPlayPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="PlayPause"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/btnMiniNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Next"
        app:srcCompat="@android:drawable/ic_media_next" />

</LinearLayout>
